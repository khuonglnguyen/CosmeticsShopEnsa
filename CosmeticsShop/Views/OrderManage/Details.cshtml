@model List<CosmeticsShop.Models.OrderDetail>
@{
    ViewBag.Title = "Order detail: " + Request.Params["ID"];
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Order Detail: @Request.Params["ID"]</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Product name</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td><img src="~/Content/images/@item.ProductImage" alt="Alternate Text" style="width:50px;height:80px" /></td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.Quantity</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    Not found...
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!ViewBag.IsProcessed)
                {
                    <a href="/OrderManage/Processed/@Request.Params["ID"]" class="btn btn-primary float-right">Accept</a>
                }
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
